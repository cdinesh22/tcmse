{
  "version": 2,
  "buildCommand": "npm --prefix frontend ci && npm --prefix frontend run build",
  "outputDirectory": "frontend/dist",
  "routes": [
    { "src": "/api/(.*)", "dest": "api/$1.js" },
    { "src": "/assets/(.*)", "dest": "frontend/dist/assets/$1" },
    { "src": "/(.*)", "dest": "frontend/dist/index.html" }
  ]
}


